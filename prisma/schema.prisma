generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum Provider {
    email
    google
}

model User {
    id       Int    @id @default(autoincrement())
    name     String
    email    String @unique
    password String

    board    String?
    standard String?
    subject  String?
    profile  String?
    provider Provider?

    otp           Int?
    otp_expiry    DateTime?
    is_active     Boolean   @default(false)
    is_verify     Boolean   @default(false)
    last_login    DateTime?
    access_token  String?
    refresh_token String?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    Room      Room[]
}

model Room {
    room_name String
    room_id   Int       @id @default(autoincrement())
    user_id   Int
    users     User      @relation(fields: [user_id], references: [id])
    message   Message[]
}

enum Role {
    USER
    ASSISTANT
}

model Message {
    role      Role?
    content   String
    id        Int      @id @default(autoincrement())
    room_id   Int
    createdAt DateTime @default(now())
    room      Room     @relation(fields: [room_id], references: [room_id])
}


model Checkpoints {
  id                  Int       @id @default(autoincrement())
  checkpointId        String    @unique          // corresponds to checkpoint_id
  checkpointNs        String?                     // corresponds to checkpoint_ns
  threadId            String                      // corresponds to thread_id
  checkpoint          Json                        // decoded JSON from Binary
  metadata            Json?                       // decoded JSON from Binary
  parentCheckpointId  String?                     // corresponds to parent_checkpoint_id
  type                String?                     // e.g. "json"
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  @@index([threadId])
}
